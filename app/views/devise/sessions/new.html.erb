    <div class = "row">
      <div class = "col-md-4 col-xs-12">  
      </div>
    </div>
  </div>



</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div id="logintitle">
  Log In
</div>

<form>
  <div id="loginform">
    <div class="label2"><%= f.label :email %></div>
    <%= f.email_field :email, autofocus: true %>
    <br>
    <div class="label2"><%= f.label :password %></div>
    <%= f.password_field :password, autocomplete: "off" %>
    <br>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <div class="rememberme" style="font-family: 'Abel', Arial; font-color: navy;  font-size: 16px;display: inline-block; padding: 5px"><%= f.label :remember_me %></div>
    </div>
    <% end -%>

    <div class="loginbutton">
      <%= f.submit "Log in" %>
    </div>
    <br>
    <div class="bottomlinks" style="font-family: 'Abel', Arial;"><%= render "devise/shared/links" %></div>
  </div>
</form>

<% end %>


<div id = "footer">
